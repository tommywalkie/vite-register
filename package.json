{
  "name": "vite-register",
  "version": "0.0.3",
  "description": "Node require hook which allows to use Vite env variables. Useful for tests.",
  "bin": "dist/bin.js",
  "main": "dist/require.js",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "esbuild src/index.ts src/bin.ts src/require.ts --platform=node --target=es2019 --format=cjs --outdir=dist/",
    "test": "run-s build test:exec",
    "test:exec": "uvu -r tsm -r dist/require.js tests/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tommywalkie/vite-register.git"
  },
  "keywords": [
    "vite",
    "env",
    "register",
    "import",
    "meta"
  ],
  "author": "Tom Bazarnik <tommywalkie@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tommywalkie/vite-register/issues"
  },
  "homepage": "https://github.com/tommywalkie/vite-register#readme",
  "dependencies": {
    "parse-key-value-pair": "1.1.2",
    "pirates": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "esbuild": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "tsm": "^2.1.3",
    "uvu": "^0.5.2",
    "vite": "^2.6.13"
  }
}
